<div class="container">
    <div class="row">
        <div class="col">
            <p class="text-end">Hola {{usuario}}! <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n <i
                        class="fas fa-sign-out-alt"></i></a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo</a>
            </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table" style="margin-top:20px">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a href="/admin/novedades/editar/{{id}}" class="btn btn-secondary"> <i class="fas fa-edit"> Editar</i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"> <i class="fas fa-trash-alt"> Eliminar</i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>